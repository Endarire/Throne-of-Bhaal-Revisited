		SetGlobal("WGladder","AR5500",0)
		ActionOverride(Player1,JumpToPoint([2479.1247])
		ActionOverride(Player2,JumpToPoint([2482.1271])
		ActionOverride(Player3,JumpToPoint([2571.1264])
		ActionOverride(Player4,JumpToPoint([2571.1294])
		ActionOverride(Player5,JumpToPoint([2559.1324])
		ActionOverride(Player6,JumpToPoint([2526.1322])
END

